<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
       default-autowire="byName">

    <bean id="propertyConfiguer" class="org.kimios.utils.spring.PropertiesHolderPropertyPlaceholderConfiguer">
        <property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE"></property>
        <property name="locations">
            <list>
                <value>${kimios.home}/${kimios.app.settings}/conf/kimios.properties</value>
            </list>
        </property>
    </bean>


    <bean id="configurationManager" class="org.kimios.utils.configuration.ConfigurationManager">
        <property name="holder">
            <bean id="configurationHolder" class="org.kimios.utils.configuration.SpringPropertiesConfigurationHolder">
                <constructor-arg ref="propertyConfiguer" />
            </bean>
        </property>
    </bean>


</beans>