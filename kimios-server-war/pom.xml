    <build>
        <finalName>kimios-${project.version}</finalName>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>aspectj-maven-plugin</artifactId>
                <version>1.8</version>
                <configuration>
                    <complianceLevel>1.8</complianceLevel>
                    <source>1.8</source>
                    <target>1.8</target>
                    <outxml>true</outxml>
                    <Xlintfile>${project.basedir}/ajc.properties</Xlintfile>
                    <showWeaveInfo>true</showWeaveInfo>
                    <weaveDependencies>
                        <weaveDependency>
                            <groupId>org.kimios</groupId>
                            <artifactId>kimios-kernel</artifactId>
                        </weaveDependency>
                        <weaveDependency>
                            <groupId>org.kimios</groupId>
                            <artifactId>kimios-index</artifactId>
                        </weaveDependency>
                        <weaveDependency>
