                            <artifactId>kimios-bonita</artifactId>
                        </weaveDependency>
                        <weaveDependency>
                            <groupId>org.kimios</groupId>
                            <artifactId>kimios-share</artifactId>
                        </weaveDependency>
                    </weaveDependencies>
             </configuration>
                <executions>
                <execution>
                    <goals>
                        <goal>compile</goal>
                    </goals>
                </execution>
            </executions>
            </plugin>
            <plugin>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.6</version>
                <configuration>
                    <packagingExcludes>
                        WEB-INF/lib/slf4j-log4j12-*.jar,
                        WEB-INF/lib/commons-logging-*.jar,
                        WEB-INF/lib/kimios-kernel-*.jar,
                        WEB-INF/lib/kimios-bonita-${project.version}.jar,
                        WEB-INF/lib/kimios-share-${project.version}.jar,
                        WEB-INF/lib/kimios-convert-${project.version}.jar,
                        WEB-INF/lib/kimios-convert-jodconverter-${project.version}.jar,
                        WEB-INF/lib/kimios-index-*.jar,
                        %regex[WEB-INF/lib/commons-logging-*.jar],
                        %regex[WEB-INF/lib/bc*-jdk14*.jar],
                        %regex[WEB-INF/lib/slf4j-log4j12-*.jar],
                        %regex[WEB-INF/lib/log4j-(?!over-slf4j).*.jar]
                    </packagingExcludes>
                    <archive>
                        <manifest>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                        </manifest>
                        <manifestEntries>
                            <git-SHA-1>${buildNumber}</git-SHA-1>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>
