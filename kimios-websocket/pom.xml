<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>kimios</artifactId>
        <groupId>org.kimios</groupId>
        <version>1.3-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <packaging>war</packaging>
    <artifactId>kimios-websocket</artifactId>

    <dependencies>
        <dependency>
            <groupId>javax.websocket</groupId>
            <artifactId>javax.websocket-api</artifactId>
            <version>${javax.websocket-api.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
            <version>${gson.version}</version>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>2.4</version>
        </dependency>
        <dependency>
            <groupId>org.eclipse.jetty.websocket</groupId>
            <artifactId>websocket-servlet</artifactId>
            <version>9.2.14.v20151106</version>
        </dependency>
        <dependency>
            <groupId>org.kimios</groupId>
            <artifactId>kimios-model</artifactId>
            <version>1.3-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>org.kimios</groupId>
            <artifactId>kimios-kernel</artifactId>
            <version>1.3-SNAPSHOT</version>
            <scope>compile</scope>
        </dependency>

        <!--<dependency>
            <groupId>javax.inject</groupId>
            <artifactId>javax.inject</artifactId>
            <version>1</version>
            <scope>compile</scope>
        </dependency>-->
    </dependencies>

    <properties>
        <javax.websocket-api.version>1.1</javax.websocket-api.version>
        <gson.version>2.8.0</gson.version>
    </properties>

    <build>
        <plugins>

            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>5.1.2</version>
                <extensions>true</extensions>
                <executions>
                    <execution>
                        <id>bundle-manifest</id>
                        <phase>process-classes</phase>
                        <goals>
                            <goal>manifest</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <supportedProjectTypes>
                        <supportedProjectType>war</supportedProjectType>
                    </supportedProjectTypes>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Version>${project.version}</Bundle-Version>
                        <Bundle-ClassPath>WEB-INF/classes</Bundle-ClassPath>
                        <Embed-Dependency>*;scope=compile|runtime</Embed-Dependency>
                        <Embed-Directory>WEB-INF/lib</Embed-Directory>
                        <Web-ContextPath>/chat</Web-ContextPath>
                        <Import-Package>
                            javax.mail,
                            javax.mail.internet,
                            javax.management,
                            javax.naming,
                            javax.net,
                            javax.net.ssl,
                            javax.servlet,
                            javax.servlet.http,
                            javax.servlet.jsp,
                            javax.servlet.jsp.el,
                            javax.sql,
                            javax.websocket,
                            javax.websocket.server,
                            javax.xml.namespace,
                            javax.xml.parsers,
                            javax.xml.stream,
                            javax.xml.stream.events,
                            org.apache.commons.logging,
                            org.apache.commons.logging.impl,
                            org.apache.log4j,
                            org.apache.log4j.spi,
                            org.apache.log4j.xml,
                            org.slf4j,
                            org.slf4j.helpers,
                            org.slf4j.spi,
                            org.xml.sax,
                            org.xml.sax.helpers,
                            org.kimios.kernel.ws.pojo,
                            org.kimios.kernel.controller,
                            *;resolution:=optional
                        </Import-Package>
                        <Include-Resource>{maven-resources}</Include-Resource>
                        <!--<Export-Service>org.kimios.websocket.IKimiosWebSocketController</Export-Service>-->
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <executions>
                    <execution>
                        <id>war-osgi</id>
                        <goals>
                            <goal>war</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <classifier>osgi</classifier>
                            <webappDirectory>${project.build.directory}/${project.build.finalName}-osgi</webappDirectory>
                            <webXml>src/main/webapp/WEB-INF/web.xml</webXml>
                            <packagingExcludes>
                                WEB-INF/lib/commons-logging-*.jar,
                                WEB-INF/lib/cxf-*.jar,
                                WEB-INF/lib/slf4j*.jar,
                                WEB-INF/lib/logback*.jar,
                                WEB-INF/lib/aspectj*.jar,
                                WEB-INF/lib/kimios-utils*.jar,
                                %regex[WEB-INF/lib/log4j-(?!over-slf4j).*.jar]
                            </packagingExcludes>

                            <archive>
                                <manifestFile>${project.build.outputDirectory}/META-INF/MANIFEST.MF</manifestFile>
                                <manifest>
                                    <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                                </manifest>
                            </archive>
                        </configuration>
                    </execution>

                </executions>
            </plugin>

        </plugins>
    </build>

</project>